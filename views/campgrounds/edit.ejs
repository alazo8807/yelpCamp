<% include ../partials/header %>
<div class="container">
    <div class="row"> 
        <h1 style="text-align:center;"><%= campground.name%></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="campground[name]" value="<%= campground.name %>"></input>    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image URL" name="campground[image]" value="<%= campground.image %>"></input>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[description]" placeholder="description" value="<%= campground.description %>"></input>
                </div>
                <div class="form-group">    
                    <input type="submit" class="btn btn-lg btn-primary btn-block"></input>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<%include ../partials/footer%>